<h1>Edit <%= product.name %></h1>
<form method="POST" action="/cms/products/<%= product._id %>?_method=PUT" enctype="multipart/form-data">
    <%- CSRF %>
    <%- PUT %>
    <!-- Category -->
    <div class="form-group">
        <label for="id_product_category">Change Product Category:</label>
        <select class="mdb-select md-form form-control" id="id_product_category" name="category_slug">
            <option value="0" selected> Select Category </option>
            <% for(category of categories) {%>
            <option value="<%= category.slug %>" <%= (category.slug == product.category_slug) ? 'selected' : '' %>>
                <%= category.name %></option>
            <% } %>
        </select>
    </div>

    <!-- Product Name -->
    <div class="form-group">
        <label for="id_name">Product Name:</label>
        <input type="text" class="form-control" id="id_name" name="name" placeholder="Product Name"
            value="<%= product.name %>">
    </div>

    <!-- Product Price -->
    <div class="form-group">
        <label for="id_price">Product Price:</label>
        <input type="number" class="form-control" id="id_price" name="price" placeholder="Product Price" step="0.01"
            value="<%= product.price %>">
    </div>

    <!-- Product inStock -->
    <div class="form-group">
        <label for="id_stock">In Stock:</label>
        <input type="number" class="form-control" id="id_stock" name="inStock" placeholder="in stock step=" 0.01"
            value="<%= product.inStock %>">
    </div>

    <!-- Product Description -->
    <div class="form-group">
        <label for="id_description">Product Description: </label>
        <textarea id="id_description" class="form-control" name="description" rows="3"
            placeholder="Add A Description..."><%= product.description %></textarea>
    </div>

    <input type="hidden" name="_id" value="<%= product._id %>">


    <!-- Image -->
    <div class="container">
        <div class="row">
            <div class="col-sm-2 imgUp">
                <div class="imagePreview">

                </div>
                <label class="btn btn-primary">
                    Upload<input type="file" name="image" class="uploadFile img" value="Upload Photo"
                        style="width: 0px;height: 0px;overflow: hidden;">
                </label>
            </div><!-- col-2 -->
            <!-- Plus symbol -->
            <i class="fa fa-plus imgAdd">+</i>
        </div><!-- row -->
    </div><!-- container -->


    <!-- Submit button -->
    <div class="form-group">
        <input type="submit" value="Update Product" class="btn btn-primary form-control">
    </div>
</form>