<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom float-right">
  <div class="btn-toolbar mb-2 mb-md-0">
    <a href="/cms/products/create" class="btn btn-sm btn-primary">
      Add Product
    </a>
  </div>
</div>

<h2>Section title</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#ID</th>
        <th>Name</th>
        <th>Image</th>
        <th>In Stock</th>
        <th>Description</th>
        <th>Category</th>
        <th>Operations</th>
      </tr>
    </thead>
    <tbody>
      <% for(product of products) { %>
        <% console.log(product) %>
        <tr data-container="<%= product._id %>">
          <td><%= product._id %></td>
          <td>
            <%= product.name %>
          </td>
          <td>
              <img src="/images/<%= product.image %>" class="img-thumbnail">
          </td>
          <td>
            <%= product.inStock %>
          </td>
          <td><%= product.description.split(' ').slice(1, 10).join(' ') %></td>
          <td><%= product.category_slug %></td>
          <td class="card__actions" data-path="/cms/products/<%= product._id %>">
            <!-- <form action="/cms/products/<%= product._id %>?_method=DELETE" method="POST"> -->
              <input type="hidden" name="product_id" value="<%= product._id %>">
              <%- CSRF %>
              <%- DELETE %>
              <input type="button" value="Delete" class="btn btn-danger controller-btn">
            <!-- </form> -->
            <a href="/cms/products/<%= product._id %>" class="btn btn-primary">Edit</button>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>