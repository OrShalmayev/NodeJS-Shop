<h1>Add Product</h1>
<form method="POST" action="/cms/products" enctype="multipart/form-data">
    <%- CSRF %>
    <!-- Category -->
    <div class="form-group">
        <label for="id_product_category">Select Product Category:</label>
        <select class="mdb-select md-form form-control" id="id_product_category" name="category_slug" >
            <option value="" selected> Select Category </option>
            <% for(category of categories) {%>
                <option value="<%= category.slug %>"><%= category.name %></option>
            <% } %>
        </select>
    </div>
    <!-- Product Name -->
    <div class="form-group">
        <label for="id_name">Product Name:</label>
        <input type="text" class="form-control" id="id_name" name="name" placeholder="Product Name">
    </div>

    <!-- Product Price -->
    <div class="form-group">
        <label for="id_price">Product Price:</label>
        <input type="number" class="form-control" id="id_price" name="price" placeholder="Product Price" step="0.01">
    </div>
    
    <!-- Product inStock -->
    <div class="form-group">
        <label for="id_instock">Product Stock: </label>
        <input type="number" id="id_instock" class="form-control" name="inStock" placeholder="Products in stock..">
    </div>

    <!-- Product Description -->
    <div class="form-group">
        <label for="id_description">Product Description: </label>
        <textarea id="id_description" class="form-control" name="description" rows="3" placeholder="Add A Description..."></textarea>
    </div>

    <!-- Image -->
    <div class="container">
        <div class="row">
            <div class="col-sm-2 imgUp">
                <div class="imagePreview" >

                </div>
                <label class="btn btn-primary">
                    Upload<input type="file" name="image" class="uploadFile img" value="Upload Photo"
                        style="width: 0px;height: 0px;overflow: hidden;">
                </label>
            </div><!-- col-2 -->
            <!-- Plus symbol -->
            <i class="fa fa-plus imgAdd">+</i>
        </div><!-- row -->
    </div><!-- container -->

    <!-- Submit button -->
    <div class="form-group">
        <input type="submit" value="Add Product" class="btn btn-primary form-control">
    </div>
</form>