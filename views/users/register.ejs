    <h1 class="h3 mb-3 font-weight-normal">Register</h1>

    <form action="/register" method="POST" class="form-signin" >
        <%- CSRF %>
        <!-- USERNAME -->
        <div class="form-group my-3">
            <label for="inputUsername" class="sr-only">Username: </label>
            <input 
            class="form-control <%= validationErrors.find(e => e.param === 'username') ? 'is-invalid' : '' %>"
            type="text" 
            id="inputUsername" 
            name="username" 
            placeholder="Username"  
            value="<%= oldInput.username %>" 
            required autofocus>
        </div>

        <!-- EMAIL -->
        <div class="form-group my-3">
            <label for="inputEmail" class="sr-only">Email address: </label>
            <input 
            class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'is-invalid' : '' %>"
            type="email" 
            id="inputEmail" 
            name="email" 
            placeholder="Email address" 
            value="<%= oldInput.email %>" 
            required >
        </div>

        <!-- PASSWORD -->
        <div class="form-group my-3">
            <label for="inputPassword" 
            class="sr-only">Password: </label>
            <input 
            class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'is-invalid' : '' %>"
            type="password" 
            id="inputPassword" 
            name="password" 
            placeholder="Password"  
            value="<%= oldInput.password %>"  
            required>
        </div>

        <!-- CONFIRM PASSWORD -->
        <div class="form-group my-3">
            <label for="inputPassword" class="sr-only">Confirm Password: </label> 
            <input 
            class="form-control <%= validationErrors.find(e => e.param === 'confirm_password') ? 'is-invalid' : '' %>"
            type="password" 
            id="inputPassword" 
            name="confirm_password" 
            placeholder="Password Confirmation"  
            value="<%= oldInput.confirm_password %>"  
            required>
        </div>

        <!-- SUBMIT BUTTON -->
        <div class="form-group my-3">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        </div>
        
    </form>
    
    <a href="/login">Already a member? login</a>
