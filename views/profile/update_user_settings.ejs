<div class="row">
        <%- include left_nav %>

        <div class="col-9">
                <!-- UPDATE SETTINGS -->
                <h1 class="h3 mb-3 font-weight-normal">Update User Settings</h1>
                <form action="/profile/update-user-name?_method=PUT" method="POST" class="form-signin">
                    <%- CSRF %>
                    <%- PUT %>
                    <!-- USERNAME -->
                    <div class="form-group my-3">
                            <label for="inputUsername" class="sr-only">Username: </label>
                            <input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" value="<%= loggedUser.username %>" required autofocus>
                    </div>
                    <!-- SUBMIT BUTTON -->
                    <div class="form-group my-3">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Update User Settings</button>
                    </div>
                </form>

                <!-- UPDATE EMAIL -->
                <h1 class="h3 mb-3 font-weight-normal">Update User Email</h1>
                <form action="/profile/update-user-email?_method=PUT" method="POST" class="form-signin">
                    <%- CSRF %>
                    <%- PUT %>

                    <!-- EMAIL -->
                    <div class="form-group my-3">
                        <label for="inputEmail" class="sr-only">Email address</label>
                        <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email address" value="<%= loggedUser.email %>" required autofocus>
                    </div>

                    <!-- SUBMIT BUTTON -->
                    <div class="form-group my-3">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Update Email</button>
                    </div>
                </form>

                <!-- UPDATE PASSWORD -->
                <h1 class="h3 mb-3 font-weight-normal">Update User Password</h1>
                <form action="/profile/update-user-password?_method=PUT" method="POST" class="form-signin">
                    <%- CSRF %>
                    <%- PUT %>

                    <!-- PASSWORD -->
                    <div class="form-group my-3">
                        <label for="inputPassword" class="sr-only">Password</label>
                        <input type="password" id="inputPassword" class="form-control" name="password" placeholder="New Password" required>
                    </div>
                    <!-- SUBMIT BUTTON -->
                    <div class="form-group my-3">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Update User Password</button>
                    </div>
                </form>
                
        </div>    

</div>
